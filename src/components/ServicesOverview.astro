---
import {getCollection} from "astro:content";
import SectionWrapper from "./SectionWrapper.astro";
import {marked} from "marked";
import {Icon} from "astro-icon/components";

const [benefit] = await getCollection('benefit');

const content = benefit.data.offer_message ? marked.parse(benefit.data.offer_message) : undefined;
---

<SectionWrapper>
    <div class="container">
        <div class="flex flex-col items-start gap-12 lg:flex-row lg:items-center">
            <div class="lg:sticky lg:top-24 lg:w-1/2">
                <div class="text-left">
                    <h2 class="mb-4 text-3xl font-bold tracking-tighter text-foreground sm:text-5xl">{benefit.data.offer_title}</h2>
                    <div class="mt-4 space-y-6 text-base text-muted-foreground sm:text-lg">
                        <div class="prose w-full text-lg dark:prose-invert">
                            <article set:html={content}/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="relative grid grid-cols-1 gap-6 sm:grid-cols-2 sm:gap-8 md:grid-cols-3 lg:w-1/2 lg:grid-cols-2 xl:grid-cols-3">
                {benefit.data.offer_bulletpoints?.map((b) => {
                    return (
                            <div class="group flex flex-col bg-white border shadow-sm rounded-xl hover:shadow-md focus:outline-none focus:shadow-md transition dark:bg-neutral-900 dark:border-neutral-800">
                                <div class="p-4 md:p-5">
                                    <div class="flex flex-col gap-x-5">
                                        <Icon name={`lucide:${b.icon}`} class="h-5 w-5 sm:h-6 sm:w-6"  />
                                        <div class="grow">
                                            <h3 class="group-hover:text-highlight font-semibold text-gray-800 dark:group-hover:text-neutral-400 dark:text-neutral-200">
                                                {b.title}
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    )
                })}
            </div>
        </div>
    </div>
</SectionWrapper>