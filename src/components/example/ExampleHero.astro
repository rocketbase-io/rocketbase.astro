---
import RemoteImage from "@components/RemoteImage.astro";
import {marked} from "marked";

const {title, message, image} = Astro.props;
const text = message ? marked.parse(message) : undefined;

---

<div class="relative shadow overflow-hidden before:absolute before:top-0 before:start-1/2 before:bg-[url('https://preline.co/assets/svg/examples/polygon-bg-element.svg')] dark:before:bg-[url('https://preline.co/assets/svg/examples-dark/polygon-bg-element.svg')] before:bg-no-repeat before:bg-top before:bg-cover before:size-full before:-z-[1] before:transform before:-translate-x-1/2">
    <div class="container h-full h-max-[50rem] flex flex-col gap-2 items-center mx-auto px-8 pt-24 pb-10">
        {image && (
                <div class="flex-autp shadow border-4 rounded-lg overflow-hidden transition-all duration-500 ease-out hover:scale-105 is-visible">
                    <RemoteImage class="w-full" asset={image} widths={[1280, 920, 600]} />
                </div>
        )}
        <div class="flex flex-col justify-start md:p-12 lg:p-32">

            <div class="mt-5 text-center mx-auto">
                <h1 class="block font-bold text-gray-800 text-5xl lg:text-6xl dark:text-neutral-200">
                    {title}
                </h1>
            </div>

            <div class="mt-5 text-center mx-auto text-xl text-gray-600 dark:text-neutral-400">

                <article set:html={text}/>

            </div>

        </div>
    </div>
</div>