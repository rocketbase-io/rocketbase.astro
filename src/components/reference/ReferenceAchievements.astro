---
import SectionWrapper from "../SectionWrapper.astro";
import { Icon } from 'astro-icon/components'
import type {referencesType} from "../../content/directus";

interface Props  {
    achievements?: referencesType["achievements"];
}

const {achievements} = Astro.props;
---

<SectionWrapper>

    <div class="mt-4 grid grid-cols-1 gap-10 pl-3 md:grid-cols-2 xl:grid-cols-4">
        {achievements && achievements.map((a) => {
            return (
                    <div class="relative flex flex-col gap-2 rounded-lg border bg-secondary p-8 pt-12 text-muted shadow">
                        <Icon name={`lucide:${a.icon}`} class="absolute -left-3 -top-3 h-14 w-14 rounded-lg border bg-highlight p-2 text-secondary shadow" />
                        <div class="prose w-full text-lg dark:prose-invert">{a.text}</div>
                    </div>
            )
        })}
    </div>

</SectionWrapper>