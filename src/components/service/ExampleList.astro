---
import SectionWrapper from "../SectionWrapper.astro";
import {buildImageUrl} from "../../lib/directus";
import {Image} from 'astro:assets';
import {marked} from "marked";
const {title, subtitle, examples} = Astro.props;
---

<SectionWrapper>
    <div class="container mx-auto mb bg-background px-6 lg:px-8">
        <div class="mx-auto max-w-5xl text-center">
            {title && <h2 class="mt-2 text-4xl font-bold tracking-tight sm:text-6xl">{title}</h2>}
            {subtitle && <p class="mt-6 text-lg leading-8 text-muted">{subtitle}</p>}
        </div>
    </div>
    <div class="gap flex flex-col">
        {examples.map((e, index: number) => {
            const content = e.data.hero_message ? marked.parse(e.data.hero_message) : undefined;
            const imageLeft = index % 2 === 0;
            return (
                    <div class={`flex flex-col gap-16 ${imageLeft ? "md:flex-row" : "md:flex-row-reverse" } section items-center`}>
                        <div class="mb-8 w-full md:mb-0 md:w-1/2" style="transform: none;">
                            <a href={`/services/${e.data.slug}`}>
                                <div class="relative block overflow-hidden rounded-xl transition-all duration-300" aria-label={e.data.slug}>
                                    <div class="absolute inset-0 z-10 bg-black bg-opacity-0 transition-opacity duration-300"
                                         style="opacity: 0;"></div>
                                    <div class="relative w-full overflow-hidden rounded-xl shadow-lg border">
                                        <Image class="" src={buildImageUrl(e.data.hero_image)} alt={title} inferSize width={e.data.hero_image.width} height={e.data.hero_image.height} />
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class={`md:w-1/2 ${imageLeft ? "md:pl-12" : "md:pr-12" } w-full`} style="opacity: 1; transform: none;">
                            <h3 class="mb-4 text-2xl font-bold">{e.data.hero_title}</h3>
                            <div class="mb-6">
                                <div class="prose w-full text-lg dark:prose-invert">
                                    <article set:html={content}/>
                                </div>
                            </div>
                            <a href={`/services/${e.data.slug}`}>
                                <div class="inline-block rounded-lg bg-gray-900 px-6 py-3 font-semibold text-white shadow-md transition-colors duration-300 hover:bg-gray-800" tabindex="0" style="transform: none;">
                                    {e.data.hero_title}
                                </div>
                            </a>
                        </div>
                    </div>
            )
        })}
    </div>
</SectionWrapper>