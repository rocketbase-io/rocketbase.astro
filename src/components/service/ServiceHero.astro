---
import {Image} from 'astro:assets';

const {title, subtitle, image} = Astro.props;
---
<!-- Hero -->
<div class="md:h-[35rem] relative shadow overflow-hidden">

    <div class="container mx-auto flex flex-col md:flex-row-reverse justify-center gap-16 items-center px-8 pt-24 pb-10">
        {image && (
                <div class="flex items-centerh-[25rem] w-[25rem]">
                    <Image src={image} alt={image} inferSize width={1120} height={1040}/>
                </div>
        )}
        <div class="flex flex-col max-w-xl">
            <!-- Title -->
            <div class="mt-5 max-w-2xl text-center mx-auto">
                <h1 class="block font-bold text-gray-800 text-4xl md:text-5xl lg:text-6xl dark:text-neutral-200">
                    {title}
                </h1>
            </div>
            <!-- End Title -->

            <div class="mt-5 max-w-3xl text-center mx-auto">
                <p class="text-lg text-gray-600 dark:text-neutral-400">{subtitle}</p>
            </div>
        </div>

    </div>

</div>
<!-- End Hero -->