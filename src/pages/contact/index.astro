---
import Layout from '@layouts/Layout.astro';
import {getCollection} from 'astro:content';
import Contact from "../../components/Contact.astro";
import OfferSteps from "../../components/offer/OfferSteps.astro";
import OfferHosting from "../../components/offer/OfferHosting.astro";
import OfferIndividualDevelopment from "../../components/offer/OfferIndividualDevelopment.astro";

const [offer] = await getCollection('offer');
