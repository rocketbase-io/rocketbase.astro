---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Carousel from '../components/Carousel.astro';
import Hero from "../components/Hero.astro";
import MediaContent from "../components/MediaContent.astro";
import Founder from "../components/Founder.astro";
import CTASection from "../components/CTASection.astro";

const [home] = await getCollection('home');

---

<Layout>


	<Hero title={home.data.hero_title} message={home.data.hero_message} image={"/images/hero-bg.webp"} />

	<Carousel title={home.data.company_title} />

    <MediaContent title={home.data.service_title}  subTitle={home.data.service_subtitle} image={"/images/services.avif"} message={home.data.service_teaser} buttonText={"Mehr erfahren"} buttonLink="/services" />

	<MediaContent title={home.data.reference_title}  subTitle={home.data.reference_subtitle} image={"/images/projects_collage.avif"} message={home.data.reference_teaser} buttonText={"Mehr erfahren"} buttonLink="/references" imageLeft />

	<CTASection />

	<Founder title={home.data.founder_title} message={home.data.founder_text} image={"/images/marten.jpg"} />


</Layout>
