---
import Layout from '@layouts/Layout.astro';
import {getCollection} from 'astro:content';
import ExampleList from "@components/service/ExampleList.astro";
import ServicesBlock from "@components/service/ServicesBlock.astro";
import ServiceHero from '@components/service/ServiceHero.astro';
import Contact from "../../components/Contact.astro";

const [service] = await getCollection('service');
---

<Layout title={service.data?.hero_title || "Unsere Leistungen"}
        description={service.data?.hero_message || "Kern unseres Angebotes ist die Entwicklung von individuellen, webbasierten Software-Lösungen. Dazu bieten wir ein Paket an Services von Beratung über Design bis zu Hosting. Immer passend zum Projekt geschnürt."}
        image="leistungen.png">

    <ServiceHero title={service.data?.hero_title} subtitle={service.data?.hero_message} image={"/images/services.webp"} />

    <ExampleList title={service.data?.example_title} subtitle={service.data?.example_message} />

    <Contact />

    <ServicesBlock title={"Unsere Services"}
                   subtitle={"Entdecken Sie, wie wir Ihr Unternehmen mit unserem umfassenden Leistungsspektrum auf das nächste Level bringen können."}
                   sections={service.data.sections} />

</Layout>^