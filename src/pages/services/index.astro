
---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Code from '../../components/Code.astro';
import Hero from "../../components/Hero.astro";
import ExampleList from "../../components/service/ExampleList.astro";
import ServicesBlock from "../../components/service/ServicesBlock.astro";

const examples = await getCollection('example');
const [service] = await getCollection('service');

---

<Layout>

	<Hero image={"/images/references.png"} />

	<ExampleList examples={examples} title={service.data?.example_title} subtitle={service.data?.example_message} />

	<ServicesBlock  title={service.data?.example_title} subtitle={service.data?.example_message} sections={service.data.sections} />

</Layout>^